@{
	ViewBag.Title = "Vote";
}

<script>
	function _on_regist() {
		document.forms[0].action = "/Home/Regist";
		document.forms[0].method = "post";
		document.forms[0].submit();
	}
</script>

<div class="jumbotron">



	<p class="lead">キーワードを投稿する</p>
	<input type="text" id="new_tag_name" name="new_tag_name"/>
	<input type="submit" id="" name="" value="  送信  " onclick="javascript: _on_regist();" />



	<br />
	<p class="lead">現在のタグ</p>
	<table border="1">
		<tr>
			<th>キーワード</th>
			<th>ポイント☆</th>
			<th>削除(注意！)</th>
		</tr>
		@foreach (System.Data.DataRow row in GlobalQueue.rows())
		{
			string s = "" + row["tag"];
			<tr>
				<td>@s</td>
				<td>@Html.ActionLink("" + row["count"], "Index", "./Home/Vote", new { tag = "" + s }, null)</td>
				<td>@Html.ActionLink("Delete", "Index", "./Home/Delete", new { tag = "" + s }, null)</td>
			</tr>
		}
	</table>



</div>
