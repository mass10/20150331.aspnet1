@{
	ViewBag.Title = "Vote";
}

<script>
	function _on_regist() {
		document.forms[0].action = "/Home/Regist";
		document.forms[0].method = "post";
		document.forms[0].submit();
	}
</script>
<div class="jumbotron">
	<p class="lead">現在のタグ</p>
	<table border="1">
		<tr>
			<th>タグ</th>
			<th>削除</th>
		</tr>
		<tr>
			<td><input type="text" id="new_tag_name" name="new_tag_name" style="width: 200px" /></td>
			<td><input type="submit" id="" name="" value="登録" onclick="javascript: _on_regist();" /></td>
		</tr>
		@foreach (string s in GlobalQueue.tags())
		{
		<tr>
			<td>@s</td>
			<td>@Html.ActionLink("Delete", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })</td>
		</tr>
		}
	</table>
</div>
